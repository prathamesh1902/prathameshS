<!DOCTYPE html>
<html>
<head>
    <title>Blog Home</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>Blog Posts</h1>
    <ul>
        <% posts.forEach((post, index) => { %>
            <li>
                <a href="/posts/<%= index %>"><%= post.title %></a>
            </li>
        <% }) %>
    </ul>
    <a href="/new">Create a New Post</a>
</body>
</html>
